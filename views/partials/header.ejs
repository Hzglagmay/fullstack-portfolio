<header class="site-header">
  <div class="container header-inner">
    <a href="/" class="brand">
      <span class="brand-text"><%= site.title %></span>
    </a>
    <nav class="nav">
      <% site.nav.forEach(item => { %>
        <a class="nav-link <%= (item.href === currentPath || (item.href !== '/' && currentPath.startsWith(item.href))) ? 'active' : '' %>" href="<%= item.href %>"><%= item.label %></a>
      <% }) %>
    </nav>
  </div>
</header>
