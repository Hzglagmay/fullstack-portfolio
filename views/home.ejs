<%- include('partials/head') %>
<section class="grid two">
  <article class="card profile">
    <div class="avatar"></div>
    <h2>Hans Lagmay</h2>
    <p class="muted">Developer</p>
    <div class="langs">
      <span>EN</span><span>PH</span>
    </div>
    <div class="bar"><span style="width:65%"></span><label>Java</label></div>
    <div class="bar"><span style="width:55%"></span><label>Python</label></div>
  </article>

  <article class="card hero">
    <h1 class="hero-title">
      <%= site.hero.heading[0] %><br/>
      <%= site.hero.heading[1] %><br/>
      <%= site.hero.heading[2] %>
    </h1>

    <!-- Crawl stays INSIDE this card; fixed height, no overlap -->
    <div class="crawl-wrap">
      <div class="crawl-track">
        <% site.hero.crawl.forEach(line => { %>
          <p><%= line %></p>
        <% }) %>
      </div>
    </div>

    <div class="actions">
      <a class="btn primary" href="#work">Explore Now</a>
      <a class="btn" href="/contact">Contact</a>
    </div>
  </article>
</section>

<section id="stats" class="grid four cards-tight">
  <div class="card stat"><div class="num">3</div><div class="label">Years<br/>Experience<br/>(and counting)</div></div>
  <div class="card stat"><div class="num">269</div><div class="label">ChatGPT<br/>Prompts</div></div>
  <div class="card stat"><div class="num">128</div><div class="label">trashtalked ai</div></div>
  <div class="card stat"><div class="num">0</div><div class="label">Honors & Awards</div></div>
</section>

<section id="work" class="grid two">
  <div class="card"><h3>Web Development</h3><p>Website creation.</p></div>
  <div class="card"><h3>UI/UX</h3><p>Website creation.</p></div>
</section>
<%- include('partials/foot') %>