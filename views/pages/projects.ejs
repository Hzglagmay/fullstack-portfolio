<%- include('../partials/head') %>
<div class="shell">
  <section class="page-header">
    <h1>My Projects</h1>
    <p>A few school builds and experiments. More to come.</p>
  </section>

  <section class="projects-grid">
  <% (projects||[]).forEach(function(p){ %>
    <article class="proj card <%= p.soon?'soon':'' %>">
      <div class="icon">
        <% if(p.icon==='computer'){ %>💻<% } else if(p.icon==='github'){ %>🐙<% } else if(p.icon==='doc'){ %>📄<% } else { %>➕<% } %>
      </div>
      <h3><%= p.title %></h3>
      <% if(p.year){ %><div class="year"><%= p.year %></div><% } %>
      <div class="actions"><a class="btn" href="<%= p.cta.href %>"><%= p.cta.text %></a></div>
    </article>
  <% }) %>
  </section>
</div>
<%- include('../partials/footer') %>
