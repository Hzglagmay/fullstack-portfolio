<%- include('../partials/head') %>
<div class="shell">
  <section class="grid hero">
    <div class="card hero-left">
      <div class="avatar" style="background-image: url('/img/1.jpg'); background-size: cover; background-position: center;"></div>
      <h2>Hans Lagmay</h2>
      <div class="role">Developer</div>
      <div class="langs">
        <span class="chip">EN</span><span class="chip">PH</span>
      </div>
      <div class="skill"><label>Java</label><div class="bar"><span style="width:65%"></span></div></div>
      <div class="skill"><label>Python</label><div class="bar"><span style="width:55%"></span></div></div>
    </div>

    <div class="card hero-card">
      <h1 class="hero-title">
        <%= (site?.hero?.title||[]).join(' ') %>
      </h1>

      <!-- Replace crawl with meaningful intro -->
      <div class="intro-text">
        <p>Welcome! I'm Hans Lagmay, a passionate 3rd year BS IT student who enjoys turning creative ideas into functional, user-friendly software solutions.</p>
        <p>I specialize in web development and UI/UX design, focusing on building clean, efficient, and visually appealing digital experiences.</p>
      </div>

      <div class="actions">
        <a href="/projects" class="btn primary">Explore Now</a>
        <a href="/contact" class="btn">Contact</a>
      </div>
    </div>
  </section>

  <section class="stats grid">
    <div class="stat card"><div class="num">4</div><div class="label">Years<br/>Experience<br/>(and counting)</div></div>
    <div class="stat card"><div class="num">15</div><div class="label">Projects<br/>Completed</div></div>
    <div class="stat card"><div class="num">850+</div><div class="label">GitHub<br/>Commits</div></div>
    <div class="stat card"><div class="num">12</div><div class="label">Technologies<br/>Mastered</div></div>
  </section>

  <section class="services grid">
    <div class="service card">
      <h3>Web Development</h3>
      <p>Website creation.</p>
    </div>
    <div class="service card">
      <h3>UI/UX</h3>
      <p>Website creation.</p>
    </div>
  </section>
</div>
<%- include('../partials/foot') %>
