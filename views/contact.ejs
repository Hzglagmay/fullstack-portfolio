<%- include('partials/head') %>
<header class="page-header"><h1>Contact</h1></header>

<section class="grid two">
  <article class="card">
    <h3>Let’s work together</h3>
    <p>Tell me about your goals or a project you want to build.</p>
    <div class="note">
      <strong>Email</strong>
      <div>you@example.com</div>
      <small>I usually reply within 24–48 hours.</small>
    </div>
  </article>

  <article class="card">
    <form class="send">
      <div class="row two">
        <input type="text" placeholder="Name" />
        <input type="email" placeholder="Email" />
      </div>
      <textarea placeholder="What's up?" rows="6"></textarea>
      <div class="row end">
        <button type="button" class="btn primary">Send</button>
        <button type="reset" class="btn">Clear</button>
      </div>
    </form>
  </article>
</section>
<%- include('partials/foot') %>